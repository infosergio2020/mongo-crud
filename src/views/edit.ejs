<%- include('partials/_header') %>
<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
              <div class="card-body">
                <form action="/edit/<%= task._id%>" method="POST">
                  <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Insert Title" value="<%= task.title %>">
                  </div>
                  <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Insert Description" cols="80"><%= task.description %></textarea>
                  </div>
                  <button class="btn btn-primary btn-block" type="submit">Update</button>
                </form>
              </div>
            </div>
          </div>
    </div>
</div>
<%- include('partials/_footer') %>